<automaton>
  
  <!-- Front page and information -->
  
  <state id="0" name="st0" type="start"/>
  <state id="1" name="st1"/>
  
  <transition
      from="st0" to="st1">
    <timer delay="5" field="tr1_timer"/>
  </transition>
  
  <transition
      from="st1" to="st0">
    <timer delay="2" field="tr2_timer"/>
  </transition>
  
</automaton>
