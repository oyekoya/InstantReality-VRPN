<Group>
  <IMPORT inlineDEF="H3D_EXPORTS" exportedDEF="HDEV" AS="HDEV"/>
  <Transform
      DEF="TR">
    <Shape>
      <Appearance>
        <LineProperties
            applied="TRUE"
            linewidthScaleFactor="3"/>
        <Material
            emissiveColor="1 0 0"/>
      </Appearance>
      <ForceTorqueIcon
          forceScale=".01"
          torqueScale=".1"
          arrowHeadSize=".005"
          DEF="ICON" />
    </Shape>
  </Transform>
  <ROUTE fromNode="HDEV" fromField="trackerPosition"
         toNode="TR" toField="translation" />
  <ROUTE fromNode="HDEV" fromField="force"
         toNode="ICON" toField="force" />
  <ROUTE fromNode="HDEV" fromField="torque"
         toNode="ICON" toField="torque" />
</Group>
